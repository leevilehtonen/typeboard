{
    "name": "typeboard-backend",
    "version": "0.0.1",
    "description": "Social media application",
    "devDependencies": {
        "@types/body-parser": "^1.16.8",
        "@types/express": "^4.11.0",
        "@types/jest": "^21.1.10",
        "@types/multer": "^1.3.6",
        "@types/node": "^8.0.29",
        "@types/supertest": "^2.0.4",
        "concurrently": "^3.5.1",
        "jest": "^22.0.4",
        "nodemon": "^1.14.3",
        "supertest": "^3.0.0",
        "ts-jest": "^22.0.0",
        "tslint": "^5.8.0",
        "typescript": "^2.5.2"
    },
    "dependencies": {
        "body-parser": "^1.18.2",
        "express": "^4.16.2",
        "multer": "^1.3.0",
        "pg": "^7.3.0",
        "pg-connection-string": "^2.0.0",
        "reflect-metadata": "^0.1.10",
        "routing-controllers": "^0.7.6",
        "sqlite3": "^3.1.13",
        "typedi": "^0.6.0",
        "typeorm": "0.1.9",
        "typeorm-typedi-extensions": "^0.1.1"
    },
    "scripts": {
        "start": "npm run serve",
        "build": "npm run build-ts && npm run tslint",
        "serve": "node dist/app.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "watch-node": "nodemon dist/app.js",
        "test": "jest --forceExit",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json"
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "tsConfigFile": "tsconfig.json"
            },
            "__DEV__": true
        },
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
        },
        "testMatch": [
            "**/test/**/*.test.(ts|js)"
        ],
        "testEnvironment": "node"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/leevilehtonen/typeboard-backend.git"
    },
    "author": "Leevi Lehtonen",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/leevilehtonen/typeboard-backend/issues"
    },
    "homepage": "https://github.com/leevilehtonen/typeboard-backend#readme"
}
